{
	"extends": "@tsconfig/node16-strictest/tsconfig.json",
	"include": ["./src/**/*.ts"],
	"compilerOptions": {
		"baseUrl": "./",
		"outDir": "dist",
		"incremental": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"noPropertyAccessFromIndexSignature": false,
		"removeComments": true
	}
}
